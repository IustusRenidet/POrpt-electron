{
  "name": "POrpt",
  "version": "1.0.0",
  "description": "Dashboard Electron para POs, Remisiones y Facturas en SAE9.00 con alertas y reportes PDF.",
  "main": "main.js",
  "author": "RintelGatachi & J02V4N",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IustusRenidet/POrpt-electron.git"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.3.3",
    "chart.js": "^4.4.0",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "node-firebird": "^0.8.9",
    "pdfkit": "^0.13.0",
    "sqlite3": "^5.1.7",
    "svg-to-pdfkit": "^0.1.8",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron-forge/publisher-github": "^7.10.0",
    "electron": "^38.2.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.porpt",
    "productName": "POrpt",
    "npmRebuild": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "asarUnpack": [
      "node_modules/sqlite3/**/*"
    ],
    "extraResources": [
      {
        "from": "PERFILES.DB",
        "to": "PERFILES.DB"
      }
    ],
    "win": {
      "icon": "renderer/icono-peorpt.ico",
      "signingHashAlgorithms": [],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-x64.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}-setup.${ext}"
    }
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/IustusRenidet/POrpt-electron/issues"
  },
  "homepage": "https://github.com/IustusRenidet/POrpt-electron#readme"
}
